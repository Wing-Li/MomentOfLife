/* miniprogram/pages/addRecord.wxss */

page {
  background: #e4f4ff;
}

.title-layout {
  background: #fdfdfd;
  margin-top: 32rpx;
  width: 100%;
  height: 100rpx;
}

.title-input {
  margin: 0 32rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.content-layout {
  margin: 32rpx 16rpx;
}

.content-input {
  background: #fdfdfd;
  border-radius: 20rpx;
  padding: 16rpx;
  font-size: 32rpx;
}

.date-box {
  width: 100%;
  margin: 0 0 30rpx;
}

.titleBox {
  height: 90rpx;
  line-height: 90rpx;
  margin: 0 40rpx;
  color: #999999;
  font-size: 32rpx;
}

.input-Box {
  height: 120rpx;
  background: #fff;
  padding: 0 40rpx;
  box-shadow: 0 9px 60px 0 rgba(0, 0, 0, 0.06);
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.picker {
  width: 49%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}


.line_a {
  width: 4rpx;
  height: 50rpx;
  background: #999999;
}

.btn_confirm {
  width: 500rpx !important;
  height: 100rpx !important;
  min-height: 100rpx !important;
  line-height: 100rpx !important;
  padding: 0 !important;
  margin: 60rpx auto 100rpx !important;
  background: #ff4610 !important;
  flex-shrink: 0 !important;
  border-radius: 100rpx !important;
  font-size: 32rpx !important;
  color: #fff !important;
  justify-content: center;
}
